<Skin xmlns="http://ns.adobe.com/mxml/2009"
	  alpha.disabledStates="0.5">

    <Metadata>
    	[HostComponent("mx.components.FxRadioButton")]
    </Metadata> 
    
    <states>
        <State name="up" />
        <State name="over" stateGroups="overStates" />
        <State name="down" stateGroups="downStates" />
        <State name="disabled" stateGroups="disabledStates" />
        <State name="upAndSelected" />
        <State name="overAndSelected" stateGroups="overStates" />
        <State name="downAndSelected" stateGroups="downStates" />
        <State name="disabledAndSelected" stateGroups="disabledStates" />
    </states>

    <Group top="1.5">
        <!-- background -->
        <Ellipse width="12" height="12">
            <stroke>            
                <SolidColorStroke color="0x5380D0" color.disabled="0xA9C0E8" />
            </stroke>
            <fill>
                <SolidColor color="0xFFFFFF" color.overStates="0xEBF4FF" 
                          color.downStates="0xDEEBFF" />
            </fill>
        </Ellipse>

		<!-- shadow (down states only) -->
		<Ellipse left="0.5" top="0.5" right="1" bottom="0.5" includeIn="downStates">
			<stroke> 
				<LinearGradientStroke rotation="90">
					<GradientEntry color="0x5380D0" alpha="0.25" />
					<GradientEntry color="0x5380D0" alpha="0" />
				</LinearGradientStroke>
			</stroke>
		</Ellipse>
		
        <!-- center -->
        <Ellipse left="3.5" top="3.5" width="5" height="5" 
                    includeIn="upAndSelected, overAndSelected, downAndSelected, disabledAndSelected">
            <fill>
                <SolidColor color="0x3D5D92" color.disabledAndSelected="0x9DADC9" />
            </fill>
        </Ellipse>
    </Group>

    <!-- Label -->
    <TextBox id="labelElement"
             left="19" top="3" />

</Skin>
