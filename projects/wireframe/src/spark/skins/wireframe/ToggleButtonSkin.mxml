<Skin xmlns="http://ns.adobe.com/mxml/2009" 
      minWidth="23" minHeight="23"
      alpha.disabledStates="0.5">

    <Metadata>
        [HostComponent("mx.components.FxButton")]
    </Metadata>

    <states>
        <State name="up" />
        <State name="over" stateGroups="overStates" />
        <State name="down" stateGroups="downStates" />
        <State name="disabled" stateGroups="disabledStates" />
        <State name="upAndSelected" stateGroups="selectedStates, selectedUpStates" />
        <State name="overAndSelected" stateGroups="overStates, selectedStates" />
        <State name="downAndSelected" stateGroups="downStates, selectedStates" />
        <State name="disabledAndSelected" stateGroups="selectedUpStates, disabledStates, selectedStates" />
    </states>

    <!-- background -->
    <Rect left="0" right="0" top="0" bottom="0"
          width="69" height="20"
          radiusX="2" radiusY="2">
        <stroke>
            <SolidColorStroke color="0x5380D0" />
        </stroke>
        <fill>
            <SolidColor color="0xFFFFFF" color.over="0xEBF4FF" 
						color.down="0xDEEBFF" color.selectedStates="0xE2E6F6" />
        </fill>
    </Rect>

    <!-- shadow (down state only) -->
    <Rect left="2" top="1" right="2" height="1" includeIn="downStates">
        <fill>
            <SolidColor color="0x5380D0" alpha="0.25" />
        </fill>
    </Rect>
    <Rect left="1" top="2" right="1" height="1" includeIn="downStates">
        <fill>
            <SolidColor color="0x5380D0" alpha="0.07" />
        </fill>
    </Rect>
    <Rect left="1" top="2" bottom="1" width="1" includeIn="downStates">
        <fill>
            <SolidColor color="0x5380D0" alpha="0.07" />
        </fill>
    </Rect>
    <Rect right="1" top="2" bottom="1" width="1" includeIn="downStates">
        <fill>
            <SolidColor color="0x5380D0" alpha="0.07" />
        </fill>
    </Rect>
    
    <!-- label -->
    <TextBox id="labelElement"
             horizontalCenter="0" verticalCenter="1"
             left="10" right="10" top="2" bottom="2"
             textAlign="center" verticalAlign="middle">
    </TextBox>

</Skin>
