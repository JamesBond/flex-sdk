<Skin xmlns="http://ns.adobe.com/mxml/2009">

    <Metadata>
    	[HostComponent("mx.components.FxButton")]
    </Metadata> 
    
    <states>
        <State name="up" />
        <State name="over"/>
        <State name="down" />
        <State name="disabled" />
    </states>

    <!-- border/fill -->
	<Path data="M 0 0 h 16 Q 17 0 18 2 v 8 h -18 Z" 
		  left="0" top="0" right="0" bottom="0">
        <stroke>
            <SolidColorStroke color="0x5380D0" />
        </stroke>
        <fill>
            <SolidColor color="0xFFFFFF" color.over="0xEBF4FF" color.down="0xDEEBFF" />
        </fill>
	</Path>    
    
    <!-- shadow (down state only) -->
    <Path data="M 0 0 h 14 Q 16 0 16 2 v 6 h -16 Z" 
		  left="1" top="1" right="1" bottom="1" includeIn="down">
    	<stroke>
    		<LinearGradientStroke rotation="90">
				<GradientEntry color="0x5380D0" alpha="0.25" />
				<GradientEntry color="0x5380D0" alpha="0" />
			</LinearGradientStroke>
    	</stroke>
    </Path>

    <!-- arrow -->
    <Path>
        <fill>
            <SolidColor color="0x4E6290" />
        </fill>
        <segments>
            <MoveSegment x="9.5" y="4" />
            <LineSegment x="12.5" y="7" />
            <LineSegment x="6.5" y="7" />
            <LineSegment x="9.5" y="4" />
        </segments>
    </Path>

</Skin>
