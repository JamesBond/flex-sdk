<project name="graphics" default="main" basedir=".">

	<property name="FLEX_HOME" location="${basedir}/../../.."/>
	
	<property file="${FLEX_HOME}/build.properties"/>

	<target name="main" depends="clean,compile" description="Clean build of flex4.swc"/>

	<target name="clean">
		<delete failonerror="false">
			<fileset file="${basedir}/bundles.properties"/>
			<fileset dir="${FLEX_HOME}/frameworks/libs">
				<include name="flex4.swc"/>
				<include name="graphics.swc"/>
				<include name="flex4.swc.incr"/>
			</fileset>
		</delete>
	</target>

	<target name="compile" description="Compiles flex4.swc">
		<echo file="${FLEX_HOME}/frameworks/version.properties" append="false">build=${build.number}</echo>
		<echo message="Compiling frameworks/libs/flex4.swc"/>
		<!-- Load the <compc> task. We can't do this at the <project> level -->
		<!-- because targets that run before flexTasks.jar gets built would fail. -->
		<taskdef resource="flexTasks.tasks" classpath="${FLEX_HOME}/lib/flexTasks.jar"/>
		<!--
			Link in the classes (and their dependencies) for the MXML tags
			listed in this project's manifest.xml.
			Also link the additional classes (and their dependencies)
			listed in Flex4Classes.as,
			because these aren't referenced by the manifest classes.
			Link in accessibility support.
			Include the appropriate CSS files and assets in the SWC.
			Don't include any resources in the SWC.
			Write a bundle list of referenced resource bundles
			into the file bundles.properties in this directory.
		-->
		<compc fork="true"
			   output="${FLEX_HOME}/frameworks/libs/flex4.swc"
			   resource-bundle-list="${basedir}/bundles.properties">
			<jvmarg line="${compc.jvm.args}"/>
			<namespace uri="library:adobe/flex/gumbo" manifest="${basedir}/manifest.xml"/>
		    <namespace uri="http://ns.adobe.com/mxml/2009" manifest="${FLEX_HOME}/frameworks/mxml-2009-manifest.xml"/>
			<include-namespaces uri="library:adobe/flex/gumbo"/>
			<include-classes>Flex4Classes</include-classes>
			<source-path path-element="${basedir}/src"/>
			<library-path />
			<external-library-path dir="${FLEX_HOME}/frameworks/libs">
                <include name="player/${playerglobal.version}/playerglobal.swc"/>
				<include name="framework.swc"/>
                <include name="text_edit.swc"/>
                <include name="text_flex.swc"/>
                <include name="text_importExport.swc"/>
                <include name="text_model.swc"/>
			</external-library-path>
			<include-file name="version.properties" path="${FLEX_HOME}/frameworks/version.properties"/>
			<include-file name="defaults.css" path="${basedir}/defaults.css"/>
			<locale/>
                        <keep-as3-metadata name="SkinPart"/>
                        <keep-as3-metadata name="States"/>
                        <keep-as3-metadata name="SkinStates"/>
			<accessible>true</accessible>
		</compc>
		<delete file="${FLEX_HOME}/frameworks/version.properties"/>
	</target>
	
</project>


