<Skin xmlns="http://ns.adobe.com/mxml/2009">

    <Metadata>
    	[HostComponent("mx.components.FxButton")]
    </Metadata> 
    
    <states>
        <State name="up" />
        <State name="over" />
        <State name="down" />
        <State name="disabled" />
    </states>

    <!-- background -->
    <Rect left="1" top="0" right="2" bottom="0" minWidth="24" minHeight="14">
        <stroke>
            <SolidColorStroke color="0x5C5C5C" />
        </stroke>
        <fill>
            <SolidColor color="0xFFFFFF" />
        </fill>
    </Rect>

	<!-- fill -->
	<Rect left="2" top="1" right="3" bottom="1">
		<fill>
			<LinearGradient rotation="90">
                <GradientEntry color="0xFAFAFA"
                               color.over="0xC7C7C7"
                               color.down="0xBBBBBB" />
                <GradientEntry color="0xF0F0F0" 
                               color.over="0xB2B2B2"
                               color.down="0x8B8B8B" />
			</LinearGradient>
		</fill>
	</Rect>
	
	<!-- highlight -->
	<Rect left="2" top="1" right="3" height="6">
		<fill>
            <SolidColor color="0xFFFFFF"
                        alpha="0.75"
                        alpha.over="0.33"
                        alpha.down="0.33" />
		</fill>
	</Rect>
	
	<!-- inside stroke -->
	<Rect left="2" top="1" right="3" bottom="1">
		<stroke>
			<LinearGradientStroke rotation="90">
                <GradientEntry color="0xFFFFFF" 
                               alpha="1"
                               alpha.over="0.55"
                               alpha.down="0.12" />
                <GradientEntry color="0xFFFFFF" 
                               alpha="0.22" 
                               alpha.over="0.121" 
                               alpha.down="0.0264" />
			</LinearGradientStroke>
		</stroke>
	</Rect>

	<!-- drop shadow -->
	<Rect left="0" top="1" bottom="1" width="1">
		<fill>
			<SolidColor color="0x000000" alpha="0.12" />
		</fill>
	</Rect>
	<Rect right="0" top="1" bottom="1" width="2">
		<fill>
			<SolidColor color="0x000000" alpha="0.12" />
		</fill>
	</Rect>
	<Rect right="1" top="1" bottom="1" width="1">
		<fill>
			<SolidColor color="0x000000" alpha="0.12" />
		</fill>
	</Rect>
</Skin>
