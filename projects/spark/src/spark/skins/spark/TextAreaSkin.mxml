<Skin xmlns="http://ns.adobe.com/mxml/2009">

    <Metadata>
    	[HostComponent("flex.component.TextArea")]
    </Metadata> 
    
    <states>
        <State name="enabledNoScrollBars" stateGroups="enabled"/>
        <State name="enabledHScrollBar" stateGroups="enabled,hScrollBar"/>
        <State name="enabledVScrollBar" stateGroups="enabled,vScrollBar"/>
        <State name="enabledBothScrollBars" stateGroups="enabled,hScrollBar,vScrollBar"/>
        <State name="disabledNoScrollBars" stateGroups="disabled"/>
        <State name="disabledHScrollBar" stateGroups="disabled,hScrollBar"/>
        <State name="disabledVScrollBar" stateGroups="disabled,vScrollBar"/>
        <State name="disabledBothScrollBars" stateGroups="disabled,hScrollBar,vScrollBar"/>
    </states>
        
	<Rect left="0" right="0" top="0" bottom="0">
        <stroke>            
            <SolidColorStroke color="0x5380D0" color.disabled="0xA9C0E8"/>
        </stroke>
        <fill>
            <SolidColor color="0xF1F7FF"/>
        </fill>
    </Rect>

    <TextView id="textView" text="{hostComponent.text}"
              left="1" right="1" right.vScrollBar="16"
              top="1" bottom="1" bottom.hScrollBar="16"
              fontFamily="Arial" fontSize="11"
              color="0x2B4381" color.disabled="0x95A1C0"
              paddingLeft="4" paddingTop="4"
              paddingRight="4" paddingBottom="4"
              horizontalScrollPosition="{horizontalScrollBar.value}"
              verticalScrollPosition="{verticalScrollBar.value}"/>

    <VScrollBar id="verticalScrollBar" includeIn="vScrollBar"
                right="1" top="1" bottom="1" bottom.hScrollBar="16"
                maximum="{textView.contentHeight - textView.height}"
                value="{textView.verticalScrollPosition}"
                pageSize="{textView.height}"/>

    <HScrollBar id="horizontalScrollBar" includeIn="hScrollBar"
                left="1" bottom="1" right="1" right.vScrollBar="16"
                maximum="{textView.contentWidth - textView.width}"
                value="{textView.horizontalScrollPosition}"
                pageSize="{textView.width}"/>
    
</Skin>
