<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" 
        xmlns:s="library://ns.adobe.com/flex/spark" 
        xmlns:mx="library://ns.adobe.com/flex/mx">
    <s:states>
        <s:State name="normal" />
        <s:State name="required" />	
        <s:State name="disabledAndRequired" />	
        <s:State name="disabled" />	
    </s:states>
    
    <fx:Style>
        @namespace s "library://ns.adobe.com/flex/spark";
        @namespace mx "library://ns.adobe.com/flex/mx";
        
        .labelStyle
        {
            fontWeight : "bold";
            fontSize : 16;
        }
    </fx:Style>
    
    <s:layout>
        <s:FormItemLayout>
            <s:constraintColumns>
                <s:ConstraintColumn id="numCol" />
                <s:ConstraintColumn id="labelCol" />
                <s:ConstraintColumn id="indicatorCol" width="16"/>
                <s:ConstraintColumn id="contentCol"/>
                <s:ConstraintColumn id="helpCol"/>
                <s:ConstraintColumn id="errorCol" width="160"/>
            </s:constraintColumns>         
            <s:constraintRows>
                <s:ConstraintRow id="row1" />
            </s:constraintRows>  
        </s:FormItemLayout>
    </s:layout>

            
    <s:Label id="labelDisplay" left="labelCol:2" right="helpCol:2" top="row1:0" bottom="row1:0" styleName="labelStyle"/>

</s:Skin>