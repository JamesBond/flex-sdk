<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" 
        xmlns:s="library://ns.adobe.com/flex/spark" 
        xmlns:mx="library://ns.adobe.com/flex/mx">
    <s:states>
        <s:State name="normal" />
        <s:State name="disabled" stateGroups="disabledStates"/>	
        <s:State name="error" stateGroups="errorStates"/>	
        <s:State name="required" stateGroups="requiredStates"/>	
        <s:State name="requiredAndDisabled" stateGroups="requiredStates, disabledStates"/>
        <s:State name="requiredAndError" stateGroups="requiredStates, errorStates"/>	
    </s:states>
    
    <fx:Style>
        @namespace s "library://ns.adobe.com/flex/spark";
        @namespace mx "library://ns.adobe.com/flex/mx";
        
        .labelStyle
        {
            fontWeight : "bold";
        }
        
        .helpTextStyle
        {
            fontStyle : "italic";
            color : #6c6c6c;
        }
        
        .errorTextStyle
        {
            fontWeight : "bold";
            color : #dd2222;
        }
    </fx:Style>
    
    <s:layout>
        <s:FormItemLayout>
            <s:constraintColumns>
                <s:ConstraintColumn id="numCol" />
                <s:ConstraintColumn id="labelCol" />
                <s:ConstraintColumn id="indicatorCol" width="16"/>
                <s:ConstraintColumn id="contentCol"/>
                <s:ConstraintColumn id="helpCol"/>
                <s:ConstraintColumn id="errorCol" width="160"/>
            </s:constraintColumns>         
            <s:constraintRows>
                <s:ConstraintRow id="row1" />
            </s:constraintRows>  
        </s:FormItemLayout>
    </s:layout>
    
    <s:Rect left="0" right="0" top="0" bottom="0">
        <s:fill>
            <s:SolidColor color="0x449922" color.errorStates="0xFFDDDD" alpha="0" alpha.requiredStates=".3" alpha.error=".2"/>
        </s:fill>
    </s:Rect>

            
    <s:Label id="sequenceLabelDisplay" right="numCol:3" baseline="row1:24" />
    <s:Label id="labelDisplay" left="labelCol:2" right="labelCol:2" baseline="row1:24" styleName="labelStyle"/>
    <mx:Image source="@Embed(source='Assets.swf',symbol='mx.containers.FormItem.Required')" 
              left="indicatorCol:3" right="indicatorCol:3" baseline="row1:24" visible="false" visible.requiredStates="true"/>
    <s:Group id="contentGroup" left="contentCol:2" right="contentCol:2" baseline="row1:20" showErrorTip="false" showErrorSkin="true">
        <s:layout>
            <s:VerticalLayout/>
        </s:layout>
    </s:Group>
    <s:Group id="helpContentGroup" left="helpCol:5" right="helpCol:3" top="row1:0" bottom="row1:0"/>
    <s:RichText id="errorTextDisplay" styleName="errorTextStyle" visible="false" visible.errorStates="true"
                left="errorCol:5" right="errorCol:3" height="100%" baseline="row1:24" maxDisplayedLines="-1"/>    
        
</s:Skin>