<Skin xmlns="http://ns.adobe.com/mxml/2009">

    <Metadata>
    	[HostComponent("flex.component.ToggleButton")]
    </Metadata> 
    
    <states>
        <State name="up" />
        <State name="over" />
        <State name="down" />
        <State name="disabled" />
        <State name="upAndSelected" />
        <State name="overAndSelected" />
        <State name="downAndSelected" />
        <State name="disabledAndSelected" />
    </states>

    <content>
		<!-- TODO!! This won't look quite right until we get scale9 support back in -->
        <Group left="0" top="0" right="0" bottom="0"
               scaleGridLeft="6" scaleGridTop="6" scaleGridRight="44" scaleGridBottom="14">
            <Rect left="0" top="0" right="0" bottom="0"
                  minWidth="50" minHeight="20" radiusX="6" radiusY="6">
                <fill>
                    <SolidColor color="0x666666" color.over="0x6666BB"
                                color.down="0x6666BB" color.disabled="0xAAAAAA"
                                color.upAndSelected="0xAAAAAA"
                                color.overAndSelected="0xAAAAAA"
                                color.downAndSelected="0xAAAAAA"
                                color.disabledAndSelected="0xAAAAAA"/>
                </fill>
            </Rect>        
            <Rect left="1" top="1" right="1" bottom="1"
                  minWidth="48" minHeight="18" radiusX="5" radiusY="5">
                <fill>
                    <LinearGradient rotation="90">
                        <GradientEntry color="0xFFFFFF" color.over="0xF0F0F0"
                                       color.down="0xBBBBDD" color.disabled="0xF0F0F0"
                                       color.upAndSelected="0xDE1111"
                                       color.overAndSelected="0xDE1111"
                                       color.downAndSelected="0xDE1111"
                                       color.disabledAndSelected="0xDE1111"
                                       alpha="0.8" />
                        <GradientEntry color="0xDEDEDE" color.down="0xBBBBDD"
                                       color.upAndSelected="0xFF1111"
                                       color.overAndSelected="0xFF1111"
                                       color.downAndSelected="0xFF1111"
                                       color.disabledAndSelected="0xFF1111"
                                       alpha="0.6" />
                    </LinearGradient>
                </fill>
            </Rect>
        </Group>

	    <!-- label -->
		<TextBox id="labelField"
	             fontFamily="Arial" fontSize="12"
	             color="0x2B4381" color.disabled="0x95A1C0"
				 horizontalCenter="0" verticalCenter="1"
				 left="10" right="10" top="2" bottom="2"
				 textAlign="center" verticalAlign="middle">
		</TextBox>

        <!-- When the component is disabled, dimm everything with a rectangle -->
        <Group left="0" top="0" right="0" bottom="0"
               scaleGridLeft="6" scaleGridTop="6" scaleGridRight="44" scaleGridBottom="14"
               visible="false" visible.disabled="true" visible.disabledAndSelected="true">
            <Rect left="0" top="0" right="0" bottom="0"
                  minWidth="50" minHeight="20" radiusX="6" radiusY="6">
                <fill>
                    <SolidColor color="0xFFFFFF" alpha="0.6"/>
                </fill>
            </Rect>
        </Group>

    </content>

</Skin>
