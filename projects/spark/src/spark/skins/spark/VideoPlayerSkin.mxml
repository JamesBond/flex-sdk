<SparkSkin xmlns="http://ns.adobe.com/mxml/2009">

    <!-- host component -->
    <Metadata>
        [HostComponent("mx.components.FxVideoDisplay")]
    </Metadata>
    
    <Script>
        /* Define the skin elements that should not be colorized. 
           TODO: For video display, we need to think about this... */
        static private const exclusions:Array = [];
        override public function get colorizeExclusions():Array {return exclusions;}
    </Script>
    
    <!-- states -->
    <states>
        <State name="buffering" />
        <State name="connectionError" />
        <State name="disabled" />
        <State name="disconnected" />
        <State name="loading" />
        <State name="paused" />
        <State name="playing" />
        <State name="seeking" />
        <State name="stopped" />
    </states>
    
    <layout> 
        <VerticalLayout horizontalAlign="center"/> 
    </layout>
    
    <VideoElement id="videoElement" />
    
    <FxHSlider id="scrubBar" />
    
    <Group>
        <layout>
            <HorizontalLayout />
        </layout>
        
        <FxButton id="stopButton" label="Stop" />
        
        <FxToggleButton id="playPauseButton" skinClass="mx.skins.spark.FxVideoDisplayPlayPauseButtonSkin" label="Play" />
        
        <FxToggleButton id="muteButton" skinClass="mx.skins.spark.FxVideoDisplayMuteButtonSkin" label="Mute" />
        
        <FxVSlider id="volumeBar" liveDragging="true" height="21" valueInterval=".1" />
        
        <FxButton id="fullScreenButton" label="Fullscreen" />
    </Group>
</SparkSkin>
