<s:SparkSkin xmlns:fx="http://ns.adobe.com/mxml/2009" xmlns:s="library://ns.adobe.com/flex/spark"> 

    <!-- host component -->
    <fx:Metadata>
        [HostComponent("spark.components.DropDownList")]
    </fx:Metadata> 

	<s:states>
		<s:State name="normal" />
		<s:State name="open" />
		<s:State name="disabled" />
	</s:states>
    
    <s:PopUp id="popup"  open.normal="false" open.open="true" 
    	left="0" right="0" top="0" bottom="0" visible.open = "true" visible.normal="false"
    	placement="below">
    	<s:Group maxHeight="140" minHeight="22" visible.open = "true" visible.normal="false">
	    	 <!-- border -->
		    <s:Rect left="0" right="0" top="0" bottom="0">
		    	<s:stroke>
		    		<s:SolidColorStroke color="0x686868" weight="1"/>
		    	</s:stroke>
		    </s:Rect>
		    
		    <!-- fill -->
		    <s:Rect id="background" left="1" right="1" top="1" bottom="1" >
		    	<s:fill>
		    		<s:SolidColor id="bgFill" color="0xFFFFFF" />
		    	</s:fill>
		    </s:Rect>
		    
		    <s:Scroller left="1" top="1" right="1" bottom="1" id="scroller">
			    <s:DataGroup id="dataGroup" itemRenderer="spark.skins.default.DefaultItemRenderer">
			    	<s:layout>
			    	    <s:VerticalLayout gap="0" horizontalAlign="contentJustify" />
			    	</s:layout>
			    </s:DataGroup>
		    </s:Scroller>
    	
	        <s:filters>
	            <s:DropShadowFilter blurX="20" blurY="20" distance="5" angle="90" alpha="0.6" />
	        </s:filters>
	    </s:Group>
	</s:PopUp>
    
	<s:Button id="button" left="0" right="0" top="0" bottom="0" focusEnabled="false"
		skinClass="spark.skins.default.DropDownListButtonSkin" />  
	<s:SimpleText id="labelElement" verticalAlign="middle" 
		left="7" right="30" top="2" bottom="2" verticalCenter="1" /> 

</s:SparkSkin>