<s:SparkSkin xmlns:fx="http://ns.adobe.com/mxml/2009" xmlns:s="library://ns.adobe.com/flex/spark"> 

    <!-- host component -->
    <fx:Metadata>
        [HostComponent("spark.components.DropDownList")]
    </fx:Metadata> 

	<s:states>
		<s:State name="normal" />
		<s:State name="open" />
		<s:State name="disabled" />
	</s:states>
	
	<!-- TODO (jszeto) Remove this eventually since the spec has no effect -->
    <s:transitions>
    	<!--<s:Transition fromState="normal" toState="open" autoReverse="false">
    		<s:Sequence targets="{[popup]}">
    			<s:SetAction property="open"/>
	    		<s:Parallel duration="500">
	    			<s:Fade />
	    			<s:Move animationUpdate="popup.updateContentTransform();"/>
	    		</s:Parallel>
    		</s:Sequence>
    	</s:Transition>-->
    	<s:Transition fromState="open" toState="normal">
    		<s:Sequence targets="{[popup]}">
	    		<s:Fade duration="150"/>
	    		<s:SetAction property="open"/>	
    		</s:Sequence>
    	</s:Transition>
    </s:transitions>
    
    <s:PopUp id="popup"  open.normal="false" open.open="true" 
    	left="0" right="0" top="0" bottom="0" visible.open = "true" visible.normal="false"
    	placement="below">
    	<s:Group maxHeight="140" minHeight="22" visible.open = "true" visible.normal="false">
	    	 <!-- border -->
		    <s:Rect left="0" right="0" top="0" bottom="0">
		    	<s:stroke>
		    		<s:SolidColorStroke color="0x686868" weight="1"/>
		    	</s:stroke>
		    </s:Rect>
		    
		    <!-- fill -->
		    <s:Rect id="background" left="1" right="1" top="1" bottom="1" >
		    	<s:fill>
		    		<s:SolidColor id="bgFill" color="0xFFFFFF" />
		    	</s:fill>
		    </s:Rect>
		    
		    <s:Scroller left="1" top="1" right="1" bottom="1" id="scroller">
			    <s:DataGroup id="dataGroup" itemRenderer="spark.skins.default.DefaultItemRenderer">
			    	<s:layout>
			    	    <s:VerticalLayout gap="0" horizontalAlign="contentJustify" />
			    	</s:layout>
			    </s:DataGroup>
		    </s:Scroller>
    	
	        <s:filters>
	            <s:DropShadowFilter blurX="20" blurY="20" distance="5" angle="90" alpha="0.6" />
	        </s:filters>
	    </s:Group>
	</s:PopUp>
    
	<s:Button id="button" left="0" right="0" top="0" bottom="0" skinClass="spark.skins.default.DropDownListButtonSkin" focusEnabled="false"/>  
	<!-- TODO (jszeto) Move mouseChildren/mouseEnabled shutoff into GraphicElement createDisplayObject -->
	<s:Group left="5" right="5" top="5" bottom="5" mouseChildren="false" mouseEnabled="false">
		<s:SimpleText id="labelElement" /> 
	</s:Group>

</s:SparkSkin>