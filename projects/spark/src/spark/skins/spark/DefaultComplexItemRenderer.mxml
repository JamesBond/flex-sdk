<ItemRenderer xmlns="http://ns.adobe.com/mxml/2009">
    
    <states>
        <State name="normal"/>            
        <State name="hovered"/>
        <State name="selected"/>
    </states>
    
    <Script>
	    <![CDATA[
	        [Bindable("dataChanged")]
	        override public function set data(value:Object):void
	        {
	            super.data = value;
	            
	            // using mxmlContent for whole-sale changes is a little more 
	            // performant than continuously calling removeElement() and 
	            // addElement()
	            if (data == null || data is Array)
	               contentGroup.mxmlContent = data as Array;
	            else
	               contentGroup.mxmlContent = [data];
	        }
	    ]]>
	</Script>
	
	<Rect left="0" right="0" top="0" bottom="0">
		<fill>
			<SolidColor color="0x00FFFF"
                        alpha="0" alpha.hovered="0.2" alpha.selected="0.8" />
		</fill>
	</Rect>
	<Group id="contentGroup" verticalCenter="0" left="2" right="2" top="2" bottom="2" />

</ItemRenderer>
