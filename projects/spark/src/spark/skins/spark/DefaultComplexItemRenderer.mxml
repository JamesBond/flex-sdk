<!--- The default skin class for a Spark DefaultComplexItemRenderer class. -->
<s:ItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009" xmlns:s="library://ns.adobe.com/flex/spark">
    
    <s:states>
        <s:State name="normal"/>            
        <s:State name="hovered"/>
        <s:State name="selected"/>
    </s:states>
    
    <fx:Script>
	    <![CDATA[
	        [Bindable("dataChanged")]
	        override public function set data(value:Object):void
	        {
	            super.data = value;
	            
	            // using mxmlContent for whole-sale changes is a little more 
	            // performant than continuously calling removeElement() and 
	            // addElement()
	            if (data == null || data is Array)
	               contentGroup.mxmlContent = data as Array;
	            else
	               contentGroup.mxmlContent = [data];
	        }
	    ]]>
	</fx:Script>
	
	<s:Rect left="0" right="0" top="0" bottom="0">
		<s:fill>
			<s:SolidColor color="{contentBackgroundColor}"/>
		</s:fill>
		<s:fill.hovered>
            <s:SolidColor color="{rollOverColor}" />
        </s:fill.hovered>
        <s:fill.selected>
            <s:SolidColor color="{selectionColor}" />
        </s:fill.selected>
	</s:Rect>
	<s:Group id="contentGroup" verticalCenter="0" left="2" right="2" top="2" bottom="2" />

</s:ItemRenderer>
