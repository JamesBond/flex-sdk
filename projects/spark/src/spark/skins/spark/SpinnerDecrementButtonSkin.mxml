<Skin xmlns="http://ns.adobe.com/mxml/2009">

    <Metadata>
    	[HostComponent("mx.components.FxButton")]
    </Metadata> 
    
    <states>
        <State name="up" />
        <State name="over"/>
        <State name="down" />
        <State name="disabled" />
    </states>
    
    <!-- border/fill -->
	<Path data="M 0 0 h 18 v 8 Q 18 9 16 10 h -16 Z" 
		  left="0" top="0" right="0" bottom="0">
		<stroke>
			<SolidColorStroke color="0x686868" weight="1"/>
		</stroke>
		<fill>
			<LinearGradient rotation="90">
				<GradientEntry color="0xE8E8E8"
							   color.over="0xC2C2C2"
							   color.down="0xAEB0B1" />
				<GradientEntry color="0xDFDFDF"
							   color.over="0xADAEAF"
							   color.down="0xA1A3A5" />
			</LinearGradient>
		</fill>
	</Path>    
	
	<!-- highlight -->
	<Path data="M 0 0 h 16 v 6 Q 16 8 14 8 h -14 Z" 
		  left="1" top="1" right="1" bottom="1" >
		<stroke>
			<LinearGradientStroke rotation="90" weight="1">
				<GradientEntry color="0xFFFFFF" 
							   color.down="0x000000" 
							   alpha="0.55"
							   alpha.over="0.55" 
							   alpha.down="0.15" />
				<GradientEntry color="0xFFFFFF" 
							   color.down="0x000000"
							   alpha="0.2475"
							   alpha.over="0.2475"
							   alpha.down="0" />
			</LinearGradientStroke>
		</stroke>
	</Path>
    
    <!-- shadow -->
    <Rect left="1" top="2" right="1" height="1" includeIn="down">
    	<fill>
    		<SolidColor color="0x000000" alpha="0.07" />
    	</fill>
    </Rect>
    
    <!-- arrow -->
    <BitmapGraphic source="@Embed('assets/SpinnerDownArrow.png')"
    			   horizontalCenter="0" verticalCenter="0" />
</Skin>
