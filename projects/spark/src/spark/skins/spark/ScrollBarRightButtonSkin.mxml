<Skin xmlns="http://ns.adobe.com/mxml/2009">

    <Metadata>
    	[HostComponent("mx.components.FxButton")]
    </Metadata> 
    
    <states>
        <State name="up" />
        <State name="over" />
        <State name="down" />
        <State name="disabled" />
    </states>

    <!-- border/background -->
    <Rect left="0" right="0" minWidth="17" top="0" bottom="0" minHeight="14">
        <stroke>
            <SolidColorStroke color="0x686868" weight="1"/>
        </stroke>
        <fill>
            <SolidColor color="0xF9F9F9" color.down="0xDEEBFF" />
        </fill>
    </Rect>
    
    <!-- fill -->
    <Rect left="1" right="1" top="1" bottom="1">
    	<fill>
    		<LinearGradient rotation="90">
                <GradientEntry color="0xFFFFFF" 
                               color.over="0xBBBBBB"
                               color.down="0xD6D6D6"
                               alpha="0.85" 
                               alpha.down="1" />
                <GradientEntry color="0xE7E7E7" 
                               color.over="0x9FA0A1"
                               color.down="0x888888"
                               alpha="0.85" 
                               alpha.down="1" />
    		</LinearGradient>
    	</fill>
    </Rect>
    
    <!-- highlight -->
    <Rect left="1" right="1" top="1" height="6">
    	<fill>
    		<SolidColor color="0xFFFFFF" 
    					alpha="0.75" 
                        alpha.over="0.22"
    					alpha.down="0.22" />
    	</fill>
    </Rect>
    
    <!-- arrow -->
    <BitmapGraphic source="@Embed('assets/ScrollRightArrow.png')"
    			   horizontalCenter="0" verticalCenter="0" />
	
</Skin>
