<Skin xmlns="http://ns.adobe.com/mxml/2009"
	  minHeight="21" 
	  alpha.disabled="0.5">

    <Metadata>
        [HostComponent("mx.components.FxNumericStepper")]
    </Metadata> 
    
    <states>
    	<State name="normal" />
    	<State name="disabled" />
    </states>

    <FxButton id="incrementButton" right="0" 
              skinClass="mx.skins.spark.FxSpinnerIncrButtonSkin" />
    <FxButton id="decrementButton" right="0" bottom="0"
              skinClass="mx.skins.spark.FxSpinnerDecrButtonSkin" />
              
    <!--TODO: Once SDK-18275 is fixed, we can remove the creationComplete handler -->          
    <FxTextInput id="textInput" left="0" top="0" right="18" bottom="0"
    	creationComplete="textInput.textView.setStyle('paddingLeft', 3);textInput.textView.setStyle('paddingRight', 6);"/>
</Skin>