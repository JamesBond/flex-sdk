<Skin xmlns="http://ns.adobe.com/mxml/2009">

    <Metadata>
        [HostComponent("flex.component.NumericStepper")]
    </Metadata> 

    <Button id="incrementButton" left="{textInput.width}" 
            width="12" height="12" skinZZ="flex.skin.SpinnerIncrButtonSkin" />
    <Button id="decrementButton" left="{textInput.width}" 
            top="{incrementButton.height}" width="12" height="12" 
            skinZZ="flex.skin.SpinnerDecrButtonSkin" />
    <TextInput id="textInput" height="25" text="{hostComponent.value}"
               skinZZ="flex.skin.TextInputSkin" />

</Skin>