<Skin xmlns="http://ns.adobe.com/mxml/2009">

    <Metadata>
        [HostComponent("mx.components.FxNumericStepper")]
    </Metadata> 
    
    <states>
    	<State name="normal" />
    	<State name="disabled" />
    </states>

    <FxButton id="incrementButton" left="{textInput.width}" 
            width="12" height="12" skinZZ="mx.skins.spark.FxSpinnerIncrButtonSkin" />
    <FxButton id="decrementButton" left="{textInput.width}" 
            top="{incrementButton.height}" width="12" height="12" 
            skinZZ="mx.skins.spark.FxSpinnerDecrButtonSkin" />
    <FxTextInput id="textInput" height="25"
               skinZZ="mx.skins.spark.FxTextInputSkin" />

</Skin>