<Skin xmlns="http://ns.adobe.com/mxml/2009"
	  alpha.disabledStates="0.5">

    <Metadata>
    	[HostComponent("mx.components.FxRadioButton")]
    </Metadata> 
    
    <states>
        <State name="up" />
        <State name="over" stateGroups="overStates" />
        <State name="down" stateGroups="downStates" />
        <State name="disabled" stateGroups="disabledStates" />
        <State name="upAndSelected" stateGroups="selectedStates" />
        <State name="overAndSelected" stateGroups="overStates, selectedStates" />
        <State name="downAndSelected" stateGroups="downStates, selectedStates" />
        <State name="disabledAndSelected" stateGroups="disabledStates, selectedStates" />
    </states>
    
    <Group verticalCenter="0" width="13" height="13">
	    <!-- drop shadow -->
	    <Ellipse left="-1" top="-1" right="-1" bottom="-1">
	    	<stroke>
	    		<LinearGradientStroke rotation="90" weight="1">
                    <GradientEntry color="0x000000" 
                                   color.downStates="0xFFFFFF"
                                   alpha="0.011"
                                   alpha.downStates="0" />
                    <GradientEntry color="0x000000" 
                                   color.downStates="0xFFFFFF" 
                                   alpha="0.121"
                                   alpha.downStates="0.57" />
	    		</LinearGradientStroke>
	    	</stroke>
	    </Ellipse>
	    
		<!-- fill -->
		<Ellipse left="1" top="1" right="1" bottom="1">
			<fill>
				<LinearGradient rotation="90">
					<GradientEntry color="0xFFFFFF" 
								   color.overStates="0xBBBDBD" 
								   color.downStates="0xAAAAAA" 
								   alpha="0.85" />
					<GradientEntry color="0xD8D8D8" 
								   color.overStates="0x9FA0A1" 
								   color.downStates="0x929496" 
								   alpha="0.85" />
				</LinearGradient>
			</fill>
		</Ellipse>
		
		<!-- fill highlight -->
		<Path data="M 1 6 Q 2 2 6 1 Q 11 2 12 6 h -9">
			<fill>
				<SolidColor color="0xFFFFFF" alpha="0.33" />
			</fill>
		</Path>
		
		<!-- layer 6: highlight stroke (all states except down) -->
		<Ellipse left="1" right="1" top="1" bottom="1">
			<stroke>
				<LinearGradientStroke rotation="90" weight="1">
					<GradientEntry color="0xFFFFFF" color.downStates="0x939393" alpha.overStates="0.22" />
					<GradientEntry color="0xD8D8D8" color.downStates="0xB1B1B1" alpha.overStates="0.22" />
				</LinearGradientStroke>
			</stroke>
		</Ellipse>
		<Rect left="5" top="1" right="5" height="1">
			<fill>
				<SolidColor color="0xFFFFFF" 
					        color.downStates="0x939393"
					        alpha.overStates="0.22" />
			</fill>
		</Rect>
		
        <!-- border - put on top of the fill so it doesn't disappear when scale is less than 1 -->
        <Ellipse left="0" top="0" right="0" bottom="0">
            <stroke>
                <LinearGradientStroke rotation="90" weight="1">
                    <GradientEntry color="0x000000" alpha="0.70" />
                    <GradientEntry color="0x000000" alpha="0.80" />
                </LinearGradientStroke>
            </stroke>
        </Ellipse>
		
	    <!-- dot -->
	    <BitmapGraphic source="@Embed('assets/RadioDot.png')" left="4" top="4"
	                   includeIn="selectedStates" />
    </Group>

    <!-- Label -->
    <TextBox id="labelField"
             left="18" top="3" bottom="3" verticalCenter="2" />

</Skin>
