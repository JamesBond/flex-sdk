<Skin xmlns="http://ns.adobe.com/mxml/2009" alpha.disabled="0.5">

    <Metadata>
        [HostComponent("mx.components.FxButtonBar")]
    </Metadata> 

    <states>
    	<State name="normal" />
    	<State name="disabled" />
    </states>
    
	<Declarations>
		<Component id="firstButton" >
			<FxToggleButton skinClass="mx.skins.spark.FxButtonBarFirstButtonSkin" 
							width="100%" height="100%" />
		</Component>

		<Component id="middleButton" >
			<FxToggleButton skinClass="mx.skins.spark.FxButtonBarMiddleButtonSkin" 
							width="100%" height="100%" />
		</Component>

		<Component id="lastButton" >
			<FxToggleButton skinClass="mx.skins.spark.FxButtonBarLastButtonSkin" 
							width="100%" height="100%"  />
		</Component>

	</Declarations>
        
	<DataGroup id="dataGroup" width="100%" height="100%">
	    <layout>
	    	<HorizontalLayout gap="-1" />
	    </layout>
    </DataGroup>

</Skin>