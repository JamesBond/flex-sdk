<!--- The default skin class for the Spark VScrollBar component. The thumb and track skins are defined by the
VScrollBarThumbSkin and VScrollBarTrackSkin classes, respectively. -->
<s:SparkSkin xmlns:fx="http://ns.adobe.com/mxml/2009" xmlns:s="library://ns.adobe.com/flex/spark"
	  minWidth="15" minHeight="35"
	  alpha.disabled="0.5">

    <fx:Metadata>
    	[HostComponent("spark.components.VScrollBar")]
    </fx:Metadata> 
    
    <fx:Script>
        /* Define the skin elements that should not be colorized. 
           For scroll bar, the skin itself is colorized but the individual parts are not. */
        static private const exclusions:Array = ["track", "thumb", "decrementButton", "incrementButton"];
        override public function get colorizeExclusions():Array {return exclusions;}
    </fx:Script>
     
    <s:states>
    	<s:State name="normal" />
    	<s:State name="disabled" />
    </s:states>
   
    <s:Button id="track" top="16" bottom="15" height="54"
              focusEnabled="false"
              skinClass="spark.skins.default.VScrollBarTrackSkin" />
    <s:Button id="thumb" 
              focusEnabled="false"
              skinClass="spark.skins.default.VScrollBarThumbSkin" />
    <s:Button id="decrementButton" top="0"
              focusEnabled="false"
              skinClass="spark.skins.default.ScrollBarUpButtonSkin" />
    <s:Button id="incrementButton" bottom="0"
              focusEnabled="false"
              skinClass="spark.skins.default.ScrollBarDownButtonSkin" />

</s:SparkSkin>
