<SparkSkin xmlns="http://ns.adobe.com/mxml/2009"
	  minWidth="85" minHeight="15"
	  alpha.disabled="0.5">

    <Metadata>
    	[HostComponent("mx.components.FxHScrollBar")]
    </Metadata> 
    
    <Script>
        /* Define the skin elements that should not be colorized. 
           For scroll bar, the skin itself is colorized but the individual parts are not. */
        static private const exclusions:Array = ["track", "thumb", "decrementButton", "incrementButton"];
        override public function get colorizeExclusions():Array {return exclusions;}
    </Script>
    
    <states>
    	<State name="normal" />
    	<State name="disabled" />
    </states>
    
    <FxButton id="track" left="16" right="15"
              skinClass="mx.skins.spark.FxHScrollBarTrackSkin" />
    <FxButton id="thumb" skinClass="mx.skins.spark.FxHScrollBarThumbSkin" />
    <FxButton id="decrementButton" left="0"
              skinClass="mx.skins.spark.FxScrollBarLeftButtonSkin" />
    <FxButton id="incrementButton" right="0"
              skinClass="mx.skins.spark.FxScrollBarRightButtonSkin" />

</SparkSkin>
