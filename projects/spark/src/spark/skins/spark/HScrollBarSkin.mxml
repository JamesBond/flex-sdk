<s:SparkSkin xmlns:fx="http://ns.adobe.com/mxml/2009" xmlns:s="library://ns.adobe.com/flex/spark"
	  minWidth="35" minHeight="15"
	  alpha.disabled="0.5">

    <fx:Metadata>
    	[HostComponent("spark.components.HScrollBar")]
    </fx:Metadata> 
    
    <fx:Script>
        /* Define the skin elements that should not be colorized. 
           For scroll bar, the skin itself is colorized but the individual parts are not. */
        static private const exclusions:Array = ["track", "thumb", "decrementButton", "incrementButton"];
        override public function get colorizeExclusions():Array {return exclusions;}
    </fx:Script>
    
    <s:states>
    	<s:State name="normal" />
    	<s:State name="disabled" />
    </s:states>
    
    <s:Button id="track" left="16" right="15" width="54"
              focusEnabled="false"
              skinClass="spark.skins.default.HScrollBarTrackSkin" />
    <s:Button id="thumb" 
              focusEnabled="false"
              skinClass="spark.skins.default.HScrollBarThumbSkin" />
    <s:Button id="decrementButton" left="0"
              focusEnabled="false"
              skinClass="spark.skins.default.ScrollBarLeftButtonSkin" />
    <s:Button id="incrementButton" right="0"
              focusEnabled="false"
              skinClass="spark.skins.default.ScrollBarRightButtonSkin" />

</s:SparkSkin>
