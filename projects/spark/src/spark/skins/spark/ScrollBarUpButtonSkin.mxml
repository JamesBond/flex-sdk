<SparkSkin xmlns="http://ns.adobe.com/mxml/2009">

    <Metadata>
    	[HostComponent("mx.components.FxButton")]
    </Metadata> 
    
    <Script>
        /* Define the skin elements that should not be colorized. 
           For scroll bar buttons, the graphics are colorized but the arrow is not. */
        static private const exclusions:Array = ["arrow"];
        override public function get colorizeExclusions():Array {return exclusions;}
        
        /* Define the symbol fill items that should be colored by the "symbolColor" style. */
        static private const symbols:Array = ["arrowFill1", "arrowFill2"];
        override public function get symbolItems():Array {return symbols};
    </Script>
    
    <states>
        <State name="up" />
        <State name="over" />
        <State name="down" />
        <State name="disabled" />
    </states>

    <!-- border/background -->
    <Rect left="0" right="0" minWidth="14" top="0" bottom="0" minHeight="17">
        <stroke>
            <SolidColorStroke color="0x686868" weight="1"/>
        </stroke>
        <fill>
            <SolidColor color="0xF9F9F9" color.down="0xDEEBFF" />
        </fill>
    </Rect>
    
    <!-- fill -->
    <Rect left="1" right="1" top="1" bottom="1">
    	<fill>
    		<LinearGradient>
    			<GradientEntry color="0xFFFFFF" 
    				           color.over="0xBBBBBB"
    						   color.down="0xD6D6D6"
    						   alpha="0.85" 
    						   alpha.down="1" />
    			<GradientEntry color="0xE7E7E7" 
    				           color.over="0x9FA0A1"
    						   color.down="0x888888"
    						   alpha="0.85" 
    						   alpha.down="1" />
    		</LinearGradient>
    	</fill>
    </Rect>
    
    <!-- highlight -->
    <Rect left="1" top="1" bottom="1" width="6">
    	<fill>
    		<SolidColor color="0xFFFFFF" 
    					alpha="0.75" 
    					alpha.over="0.22"
    					alpha.down="0.22" />
    	</fill>
    </Rect>
    
    <!-- arrow -->
    <Path horizontalCenter="0" verticalCenter="-1" id="arrow"
          data="M 3.5 0.0 L 7.0 7.0 L 0.0 7.0 L 3.5 0.0">
        <fill>
        	<RadialGradient rotation="90" focalPointRatio="1">	
	            <GradientEntry id="arrowFill1" color="0" alpha="0.65" />
	            <GradientEntry id="arrowFill2" color="0" alpha="0.8" />
        	</RadialGradient>
        </fill>
    </Path>			   
</SparkSkin>
