<?xml version="1.0" encoding="utf-8"?>
<!-- TextGraphicExample.mxml -->
<Application xmlns="http://ns.adobe.com/mxml/2009">
     <Canvas top="0" bottom="0" left="0" right="0">
          <Graphic>
               <TextGraphic x="0" y="0" width="75" fontFamily="Times" fontSize="15" textRotation="rotate90">
                    <content>Hello World!</content>
               </TextGraphic>
          </Graphic>
          <Graphic>
               <TextGraphic x="100" y="0" width="100" textAlign="justify">
                       <content>Hello World! This is a justified paragraph of text. It is about 20 words long, which should be enough to cause a few line breaks.</content>
               </TextGraphic>
          </Graphic>
          <Graphic>
               <TextGraphic x="225" y="0" width="120" height="120" columnCount="2" columnGap="10">
                    <content><span fontWeight="bold">Hello World!</span> This is a paragraph of text in 2 columns. It is about 20 words long, which should be enough to cause a few line breaks.</content>
               </TextGraphic>
          </Graphic>
     </Canvas>
</Application>