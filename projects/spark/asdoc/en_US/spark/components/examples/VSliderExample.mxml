<?xml version='1.0' encoding='UTF-8'?>
<!-- Simple example to demonstrate the Spark VSlider control-->
<s:Application xmlns:fx="http://ns.adobe.com/mxml/2009" xmlns:s="library://ns.adobe.com/flex/spark" xmlns:mx="library://ns.adobe.com/flex/halo">

    <fx:Script>
        <![CDATA[
            private var imageX:Number = 0;

            // Function to change the image size.
            private function changeSize():void {
                fxImage.x = uint(imageX + vSlider.value);
            }
        ]]>
    </fx:Script>

    <!-- Panel used as a container for Spark VSlider control examples -->
    <s:Panel title="Spark VSlider Control Example"
            width="75%" height="75%"
            horizontalCenter="0" verticalCenter="0">
        <s:VGroup left="10" right="10" top="10" bottom="10">
            <s:HGroup>
                <!-- Spark VSlider that calls the function changeSize anytime the value is
                     changed -->
                <s:VSlider id="vSlider" minimum="1" liveDragging="true" 
                        change="changeSize();"/>
                <s:Group width="100%" height="100%">
                    <mx:Image id="fxImage" source="@Embed('assets/Nokia_6630.png')"
                            creationComplete="imageX = fxImage.x;"/>
                </s:Group>
            </s:HGroup>
            <s:SimpleText width="100%" text="Drag the slider to move the image" />
        </s:VGroup>
    </s:Panel>

</s:Application>
