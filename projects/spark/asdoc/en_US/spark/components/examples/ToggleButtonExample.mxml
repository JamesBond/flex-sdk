<?xml version="1.0"?>
<!-- Simple example to demonstrate the Spark ToggleButton control -->
<s:Application xmlns:fx="http://ns.adobe.com/mxml/2009" xmlns:s="library://ns.adobe.com/flex/spark" xmlns:mx="library://ns.adobe.com/flex/halo">
    <fx:Script>
        <![CDATA[

            import spark.components.Button;
            import flash.events.Event;

            // Event handler function to print a message
            // describing the FxToggleButton selected state.
            // Toggle the fontWeight of the Label between bold and normal
            private function printMessage(event:Event):void  {
                if (event.target.selected){
                    message.text += "fontWeight: bold" + "\n";
                    lbl.setStyle('fontWeight', 'bold');
                    togBtn.label = 'Bold';
                }
                else{
                    message.text += "fontWeight: normal" + "\n";
                    lbl.setStyle('fontWeight', 'normal');
                    togBtn.label = 'Normal';
                }
            }
        ]]>
    </fx:Script>

    <mx:Panel title="Spark ToggleButton Control Example" height="75%" width="75%"
        horizontalCenter="0" verticalCenter="0" paddingTop="10" paddingBottom="10"
        paddingLeft="10" paddingRight="10">

            <s:VGroup>
                <s:ToggleButton id="togBtn" label="Normal" click="printMessage(event);"/>
                <mx:Label id="lbl" text="Label" />
            </s:VGroup>

            <s:TextArea id="message" height="100%" width="100%" color="#0000FF"/>
    </mx:Panel>
</s:Application>