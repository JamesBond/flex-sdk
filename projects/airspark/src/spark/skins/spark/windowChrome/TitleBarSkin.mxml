<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" xmlns:s="library://ns.adobe.com/flex/spark" left="0" right="0" top="0" bottom="0" 
             minHeight="24" width="100%" height="100%" >

    <fx:Metadata>
      [HostComponent("mx.core.windowClasses.TitleBar")]
    </fx:Metadata> 
  
  
    <s:states>
      <s:State name="mac" />
      <s:State name="maximized" />
      <s:State name="normal" />
      <s:State name="disabled" />
    </s:states>

    <!-- fill -->

    <s:Rect left="0" right="0" top="0" bottom="0" radiusX="2" radiusY="2" >
        <s:fill>
            <s:LinearGradient rotation="90">
                <s:GradientEntry color="0xFFFFFF" />
                <s:GradientEntry color="0xBABABA" />
            </s:LinearGradient>
        </s:fill>
    </s:Rect>
        
    <!-- title -->
    <s:SimpleText id="titleText" top="4" bottom="4" 
        left="5"
        left.mac="0"
        right.mac = "0"
        textAlign.mac="center"
        verticalAlign="middle"
        fontSize="9" color="#585858" />

    <!-- minimize button --> 
    <s:Button id="minimizeButton" 
        skinClass="spark.skins.default.MinimizeButtonSkin"
        skinClass.mac="spark.skins.default.MacMinimizeButtonSkin"
        top="2" bottom="2" verticalCenter="0" 
        right="32 + 10"
        right.mac="-1"
        left.mac="25"
        />
    
    <!-- maximize button -->
    <s:Button id="maximizeButton" 
        skinClass="spark.skins.default.MaximizeButtonSkin"
        skinClass.maximized="spark.skins.default.RestoreButtonSkin"
        skinClass.mac="spark.skins.default.MacMaximizeButtonSkin"
        verticalCenter="0" 
        right="16 + 5" 
        right.mac="-1"
        left.mac="45"
        />
                    
    <!-- close button -->
    <s:Button id="closeButton" 
        skinClass="spark.skins.default.CloseButtonSkin"
        skinClass.mac="spark.skins.default.MacCloseButtonSkin"
        verticalCenter="0" 
        right="3"
        right.mac="-1"
        left.mac="2" />
    
</s:Skin>
