<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" xmlns:s="library://ns.adobe.com/flex/spark" left="0" right="0" top="0" bottom="0" >

    <fx:Metadata>
      [HostComponent("spark.components.WindowedApplication")]
    </fx:Metadata> 
  
    <s:states>
      <s:State name="flexChrome" />
      <s:State name="normal" />
    </s:states>

    <!-- layer 1: border -->
    <s:Rect left="0" right="0" top="0" bottom="0">
        <s:stroke>
            <s:SolidColorStroke color="0" alpha="0.50" weight="1" />
        </s:stroke>
    </s:Rect>

    <!-- layer 2: background fill -->
    <s:Rect id="backgroundRect" left="1" right="1" top="1" bottom="1">
        <s:fill>
            <s:SolidColor color="{hostComponent.backgroundColor as uint}" />
        </s:fill>
    </s:Rect>
        
    <!-- layer 3: content -->
    <s:Group left="1" right="1" top="1" bottom="1" minHeight="0" minWidth="0" >
        <s:layout>
            <s:VerticalLayout gap="0"/>
        </s:layout>
    
        <!-- title bar to display when not using 'systemChrome' -->
        <s:TitleBar id="titleBar" width="100%" includeIn="flexChrome" />
        <s:Scroller width="100%" height="100%" >
            <s:Group id="contentGroup" width="100%" height="100%" minHeight="0" minWidth="0"/>
        </s:Scroller>
        
        <!-- status bar -->
        <s:Group id="statusBar" width="100%" includeIn="flexChrome" >
            <!-- layer 1: status bar fill -->
            <s:Rect left="0" right="0" top="0" bottom="0">
               <s:fill>
                    <s:LinearGradient rotation="90">
                        <s:GradientEntry color="0xE2E2E2" />
                        <s:GradientEntry color="0xD9D9D9" />
                    </s:LinearGradient>
               </s:fill>
            </s:Rect>
            
            <!-- layer 2: status bar highlight -->
            <s:Rect left="1" right="1" top="1" bottom="0">
               <s:stroke>
                    <s:LinearGradientStroke rotation="90" weight="1">
                        <s:GradientEntry color="0xEAEAEA" />
                        <s:GradientEntry color="0xBEBEBE" />
                    </s:LinearGradientStroke>
               </s:stroke>
            </s:Rect>
        
            <!-- status text -->
            <s:SimpleText id="statusText" top="2" bottom="2" left="10" verticalAlign="middle" 
                fontSize="10" color="#585858" />
                    
        </s:Group> 

    </s:Group>
    
    <!-- layer 4: gripper -->
    <s:Button id="gripper" right="2" bottom="2" skinClass="spark.skins.default.GripperSkin" includeIn="flexChrome" /> 
    
    
</s:Skin>
