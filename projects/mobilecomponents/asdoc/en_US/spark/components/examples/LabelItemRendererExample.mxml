<?xml version="1.0" encoding="utf-8"?>
<!-- Simple example to demonstrate the spark LabelItemRenderer component -->
<s:Application xmlns:fx="http://ns.adobe.com/mxml/2009" 
               xmlns:s="library://ns.adobe.com/flex/spark">
    
    <s:List width="100%"
            height="100%"
            alternatingItemColors="0xE3E3E3"
            contentBackgroundColor="0xF9F9F9"
            downColor="0x70B2EE" 
            selectionColor="0x70B2EE"
            labelField="productName"
            itemRenderer="spark.components.LabelItemRenderer">
        <s:dataProvider>
            <s:ArrayList>
                <fx:Object productName="Flex SDK" />
                <fx:Object productName="Flash Builder" />
                <fx:Object productName="Flash Catalyst" />
            </s:ArrayList>
        </s:dataProvider>
    </s:List>
    
</s:Application>
