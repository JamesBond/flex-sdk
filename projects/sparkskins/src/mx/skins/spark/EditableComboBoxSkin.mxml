<SparkSkin xmlns="http://ns.adobe.com/mxml/2009" 
      minWidth="21" minHeight="21"
      alpha.disabled="0.5">
    
    <Script>
        /* Define the skin elements that should not be colorized. 
           For button, the graphics are colorized but the arrow is not. */
        static private const exclusions:Array = ["arrow"];
        override public function get colorizeExclusions():Array {return exclusions;}
        
        /* Define the symbol fill items that should be colored by the "symbolColor" style. */
        static private const symbols:Array = ["arrowFill1", "arrowFill2"];
        override public function get symbolItems():Array {return symbols};
    </Script>
    
    <!-- states -->
    <states>
        <State name="up" />
        <State name="over" />
        <State name="down" />
        <State name="disabled" />
    </states>
    
    
    <!-- fill -->
	<Path left="0" right="1" top="1" bottom="1" 
		  data="M 0 0 l 0 18 l 65.2 0 C 66.2 18 67 17.2 67 16.2 L 67 1.8 C 66.2 0 67 0.8 65.2 0 L 0 0 z">
        <fill>
            <LinearGradient rotation="90">
                <GradientEntry color="0xFFFFFF" 
                               color.over="0xBBBDBD" 
                               color.down="0xAAAAAA" 
                               alpha="0.85" />
                <GradientEntry color="0xD8D8D8" 
                               color.over="0x9FA0A1" 
                               color.down="0x929496" 
                               alpha="0.85" />
            </LinearGradient>
        </fill>
    </Path>
    
    <!-- fill lowlight -->
    <Rect left="0" right="1" bottom="1" height="9" radiusX="2" radiusY="2">
        <fill>
            <LinearGradient rotation="90">
                <GradientEntry color="0x000000" alpha="0.0099" />
                <GradientEntry color="0x000000" alpha="0.0627" />
            </LinearGradient>
        </fill>
    </Rect>
    
    <!-- fill highlight -->
    <Rect left="0" right="1" top="1" height="9" radiusX="2" radiusY="2">
        <fill>
            <SolidColor color="0xFFFFFF" 
                        alpha="0.33" 
                        alpha.over="0.22" 
                        alpha.down="0.12" />
        </fill>
    </Rect>
    
    <!-- highlight stroke (all states except down) -->
    <Rect left="0" right="1" top="1" bottom="1" radiusX="2" radiusY="2" excludeFrom="down">
        <stroke>
            <LinearGradientStroke rotation="90" weight="1">
                <GradientEntry color="0xFFFFFF" alpha.over="0.22" />
                <GradientEntry color="0xD8D8D8" alpha.over="0.22" />
            </LinearGradientStroke>
        </stroke>
    </Rect>
    
    <!-- highlight stroke (down state only) -->
    <Rect left="0" top="1" bottom="1" width="1" includeIn="down">
        <fill>
            <SolidColor color="0x000000" alpha="0.07" />
        </fill>
    </Rect>
    <Rect right="0" top="1" bottom="1" width="1" includeIn="down">
        <fill>
            <SolidColor color="0x000000" alpha="0.07" />
        </fill>
    </Rect>
    <Rect left="0" top="1" right="2" height="1" includeIn="down">
        <fill>
            <SolidColor color="0x000000" alpha="0.25" />
        </fill>
    </Rect>
    <Rect left="0" top="2" right="1" height="1" includeIn="down">
        <fill>
            <SolidColor color="0x000000" alpha="0.09" />
        </fill>
    </Rect>
    
    <!-- border - put on top of the fill so it doesn't disappear when scale is less than 1 -->
	<Path left="-1" right="0" top="0" bottom="0" 
		  data="M 0 0 l 0 20 l 17.2 0 C 18.2 20 19 19.2 19 18.2 L 19 1.8 C 18.2 0 19 0.8 17.2 0 L 0 0 z">
        <stroke>
            <LinearGradientStroke rotation="90" weight="1">
                <GradientEntry color="0x000000" 
                               alpha="0.5625"
                               alpha.down="0.6375" />
                <GradientEntry color="0x000000" 
                               alpha="0.75" 
                               alpha.down="0.85" />
            </LinearGradientStroke>
        </stroke>
    </Path>
 
    <!-- arrow -->
    <Path right="6" verticalCenter="0" id="arrow"
          data="M 4.0 4.0 L 4.0 3.0 L 5.0 3.0 L 5.0 2.0 L 6.0 2.0 L 6.0 1.0 L 7.0 1.0 L 7.0 0.0 L 0.0 0.0 L 0.0 1.0 L 1.0 1.0 L 1.0 2.0 L 2.0 2.0 L 2.0 3.0 L 3.0 3.0 L 3.0 4.0 L 4.0 4.0">
        <fill>
        	<RadialGradient rotation="90" focalPointRatio="1">	
	            <GradientEntry id="arrowFill1" color="0" alpha="0.6" />
	            <GradientEntry id="arrowFill2" color="0" alpha="0.8" />
        	</RadialGradient>
        </fill>
    </Path>
</SparkSkin>