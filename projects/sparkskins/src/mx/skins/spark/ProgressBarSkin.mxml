<SparkSkin xmlns="http://ns.adobe.com/mxml/2009">

	<!-- layer 1: fill -->
	<Rect left="2" right="2" top="2" bottom="2" >
		<fill>
			<LinearGradient rotation="90">
				<GradientEntry color="0xFFFFFF" 
							   alpha="1" />
				<GradientEntry color="0xD8D8D8" 
							   alpha="1" />
			</LinearGradient>
		</fill>
	</Rect>
	
	<!-- layer 2: border -->
	<Rect left="2" right="2" top="2" bottom="2" >
		<stroke>
			<LinearGradientStroke rotation="90">
				<GradientEntry color="0xFFFFFF" 
				               alpha=".9" />
				<GradientEntry color="0xFFFFFF" 
				               alpha="0.5" />
			</LinearGradientStroke>
		</stroke>
	</Rect>
	
	<!-- layer 3: right edge -->
	<Rect right="1" top="2" bottom="2" width="1" >
		<fill>
			<SolidColor color="0x000000" alpha="0.55" />
		</fill>
	</Rect>
	
</SparkSkin>