<SparkSkin xmlns="http://ns.adobe.com/mxml/2009" minHeight="9">
	
	<!-- layer 1: border -->
	<Rect left="0" right="0" top="0" bottom="0" >
		<stroke>
			<LinearGradientStroke rotation="90">
				<GradientEntry color="0xFFFFFF" 
				               alpha=".12" />
				<GradientEntry color="0xFFFFFF" 
				               alpha="0.8" />
			</LinearGradientStroke>
		</stroke>
	</Rect>
	
	<!-- layer 2: inner border -->
	<Rect left="1" right="1" top="1" bottom="1" >
		<stroke>
			<SolidColorStroke color="0x636363" alpha="1" />
		</stroke>
	</Rect>
	
	<!-- layer 3: fill -->
	<Rect left="2" right="2" top="2" bottom="2" >
		<fill>
			<LinearGradient rotation="90">
				<GradientEntry color="0x9A9A9A" 
							   alpha="1" />
				<GradientEntry color="0xBDBDBD" 
							   alpha="1" />
			</LinearGradient>
		</fill>
	</Rect>
	
	<!-- layer 4: inner shadow -->
	<Rect left="2" top="2" bottom="2" width="1" >
		<fill>
			<SolidColor color="0x000000" alpha="0.12" />
		</fill>
	</Rect>
	<Rect right="2" top="2" bottom="2" width="1" >
		<fill>
			<SolidColor color="0x000000" alpha="0.12" />
		</fill>
	</Rect>
	<Rect left="3" top="2" right="3" height="1" >
		<fill>
			<SolidColor color="0x000000" alpha="0.12" />
		</fill>
	</Rect>
	
</SparkSkin>